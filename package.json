{
  "name": "NERM-Boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for building apps with Node / Express / React Redux and MongoDB",
  "scripts": {
    "test": "npm run test:client && npm run test:server",
    "test:client": "cross-env NODE_ENV=test node_modules/.bin/mocha --recursive --compilers js:babel-core/register --require ignore-styles client/**/tests/*.spec.js",
    "watch:client": "npm run test:client  -- -w",
    "test:server": "cross-env NODE_ENV=test node_modules/.bin/mocha --recursive --compilers js:babel-core/register ./server/util/test-helper.js --require ignore-styles server/**/tests/*.spec.js",
    "watch:server": "npm run test:server  -- -w",
    "start": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "build": "npm run clean && npm run build:client && npm run build:server && npm run start:prod",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server": "cross-env NODE_ENV=production BABEL_DISABLE_CACHE=1 webpack --config webpack.config.server.js",
    "clean": "rimraf dist",
    "slate": "rimraf node_modules && npm install",
    "lint:client": "eslint client",
    "lint:server": "eslint server",
    "lint": "eslint client server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kifahhk/nerm-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/kifahhk/nerm-boilerplate/issues"
  },
  "homepage": "",
  "author": "Kifah Seif <dev@kifahseif.de>",
  "license": "",
