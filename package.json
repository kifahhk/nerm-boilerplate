{
  "name": "NERM-Boilerplate",
  "version": "2.0.0",
  "description": "Boilerplate for building apps with Node / Express / React Redux and MongoDB",
  "repository": {
    "type": "git",
    "url": "https://github.com/kifahhk/nerm-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/kifahhk/nerm-boilerplate/issues"
  },
  "homepage": "",
  "author": "Kifah Seif <dev@kifahseif.de>",
  "scripts": {
    "test": "npm run test:client && npm run test:server",
    "test:client": "cross-env NODE_ENV=test node_modules/.bin/mocha --recursive --compilers js:babel-core/register --require ignore-styles client/**/*.spec.js",
    "watch:client": "npm run test:client  -- -w",
    "test:server": "cross-env NODE_ENV=test node_modules/.bin/mocha --timeout 2000 --recursive --compilers js:babel-core/register ./server/util/test-helper.js --require ignore-styles server/**/tests/*.spec.js",
    "watch:server": "npm run test:server  -- -w",
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "build": "npm run clean && npm run build:client && npm run build:server && npm run start",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server": "cross-env NODE_ENV=production BABEL_DISABLE_CACHE=1 webpack --config webpack.config.server.js",
    "clean": "rimraf dist",
    "slate": "rimraf node_modules && npm install",
    "lint:client": "eslint client",
    "lint:server": "eslint server",
    "lint": "eslint client server",
    "create": "node_modules/.bin/grunt create",
    "cssmin": "node_modules/.bin/grunt cssmin",
    "styleguide": "cross-env STORYBOOK_THEME=green && start-storybook -p 9001"
  },
  "dependencies": {
    "axios": "0.15.3",
    "babel-core": "^6.22.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.15.2",
    "compression": "1.6.2",
    "cross-env": "1.0.8",
    "dotenv": "^4.0.0",
    "express": "4.13.4",
    "isomorphic-fetch": "2.2.1",
    "limax": "^1.5.0",
    "mongoose": "^4.7.6",
    "react": "15.1.0",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-shallow-compare": "^15.4.2",
    "react-dom": "15.1.0",
    "react-helmet": "3.1.0",
    "react-redux": "4.4.6",
    "react-router": "2.4.1",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0",
    "sanitize-html": "1.11.4",
    "todomvc-app-css": "2.0.6",
    "webpack": "^2.3.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "devDependencies": {
    "autoprefixer": "6.5.4",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.4",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-require-ignore": "^0.1.0",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-es2015-native-modules": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-optimize": "1.0.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.9.0",
    "chai": "3.5.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "css-loader": "^0.27.3",
    "css-modules-require-hook": "4.0.1",
    "enzyme": "2.3.0",
    "eslint": "2.11.1",
    "eslint-config-airbnb": "9.0.1",
    "eslint-plugin-import": "1.8.1",
    "eslint-plugin-jsx-a11y": "1.3.0",
    "eslint-plugin-jsx-control-statements": "^2.1.1",
    "eslint-plugin-react": "5.1.1",
    "eventsource-polyfill": "0.9.6",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "0.8.5",
    "grunt": "^1.0.1",
    "grunt-compile-handlebars": "^2.0.2",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-cssmin": "^2.0.0",
    "grunt-prompt": "^1.3.3",
    "handlebars": "^4.0.6",
