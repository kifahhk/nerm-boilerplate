{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-shadow": 0,
    "consistent-return": 0,
    "no-nested-ternary": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-first-prop-new-line": 0,
    "max-len": [
      1,
      180,
      4
    ],
    "arrow-body-style": [
      0
    ],
    "react/jsx-no-bind": [
      0
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "import/no-unresolved": [
      0
    ]
  }
}
